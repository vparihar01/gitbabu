<h1>All Quotes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>

  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%=h quote.name %></td>
    <td><%=h quote.body %></td>
    <td><% if (quote.check != 0) %><b>PUBLISHED</b>
          <% else %>
          <b>UNPUBLISHED</b>
          <% end %></td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
